package etf.unsa.ba.Books.Entities;

import java.util.List;

import javax.persistence.CascadeType;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.ManyToMany;

import com.fasterxml.jackson.annotation.JsonIgnore;

@Entity
public class Book {

	@Id
	@GeneratedValue(strategy=GenerationType.IDENTITY)
	private Long id; 
	private String title;
	
	

	@ManyToMany(mappedBy="booksWishList", cascade = CascadeType.PERSIST)
	@JsonIgnore
	private List<UserAccount> usersWishList;
	
	
	@ManyToMany(mappedBy="booksReading", cascade = CascadeType.PERSIST)
	@JsonIgnore
	private List<UserAccount> usersReading;
	
	
	@ManyToMany(mappedBy="booksRead", cascade = CascadeType.PERSIST)
	@JsonIgnore
	private List<UserAccount> usersRead;
	
	
	protected Book() {
		
	}
	
	public Book(String title) {
		super();
		this.title = title;
	}

	public Long getId() {
		return id;
	}

	public String getTitle() {
		return title;
	}

	public void setTitle(String title) {
		this.title = title;
	}

	public List<UserAccount> getUsersWishList() {
		return usersWishList;
	}

	public void setUsersWishList(List<UserAccount> usersWishList) {
		this.usersWishList = usersWishList;
	}

	public List<UserAccount> getUsersReading() {
		return usersReading;
	}

	public void setUsersReading(List<UserAccount> usersReading) {
		this.usersReading = usersReading;
	}

	public List<UserAccount> getUsersRead() {
		return usersRead;
	}

	public void setUsersRead(List<UserAccount> usersRead) {
		this.usersRead = usersRead;
	}

	
	
	
}
